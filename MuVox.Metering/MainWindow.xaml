<Window x:Class="MuVox.Metering.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuVox.Metering"
        mc:Ignorable="d"
        Style="{DynamicResource WindowStyle}"
        DataContext="{DynamicResource MainViewModel}"
        ResizeMode="NoResize"
        Height="420"
        Title="MuVox" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MuVox.UI;component/Styles/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <local:MainViewModel x:Key="MainViewModel" />
        </ResourceDictionary>
    </Window.Resources>

    <ListBox ItemsSource="{Binding Meters}" 
             Background="Transparent"
             Foreground="{StaticResource Foreground}"
             VerticalAlignment="Stretch"
             VerticalContentAlignment="Stretch"
             BorderThickness="0"
             AlternationCount="1">
        <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
            </ItemsPanelTemplate>
        </ListBox.ItemsPanel>
    </ListBox>
</Window>
