<Application x:Class="RecordToMP3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:recorder="clr-namespace:RecordToMP3.Features.Recorder"
             xmlns:processor="clr-namespace:RecordToMP3.Features.Processor"
             xmlns:marker="clr-namespace:RecordToMP3.Features.Marker"
             xmlns:vm="clr-namespace:RecordToMP3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <vm:ViewModelLocator x:Key="ViewModelLocator" />

        <DataTemplate DataType="{x:Type recorder:RecorderViewModel}">
            <recorder:RecorderView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type processor:ProcessorViewModel}">
            <processor:ProcessorView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type marker:MarkerViewModel}">
            <marker:MarkerView />
        </DataTemplate>
    </Application.Resources>
</Application>
