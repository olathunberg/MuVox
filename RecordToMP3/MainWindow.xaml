<Window xmlns:Recorder="clr-namespace:RecordToMP3.Features.Recorder" 
        xmlns:local="clr-namespace:RecordToMP3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MvvmLight="http://www.galasoft.ch/mvvmlight" 
        x:Class="RecordToMP3.MainWindow"
        Style="{DynamicResource WindowStyle}"
        DataContext="{DynamicResource MainWindowModel}" 
        Title="Record to MP3" 
        Width="684"
        Height="393"
        ResizeMode="NoResize" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:MainWindowModel x:Key="MainWindowModel" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--<Menu Grid.Row="0" Background="{StaticResource BackgroundNormal}" Foreground="{StaticResource Foreground}">
            <MenuItem Header="Arkiv">
                <MenuItem Header="Inställningar..."/>
            </MenuItem>
        </Menu>-->
        <ContentControl x:Name="CurrentView" Content="{Binding CurrentViewModel}"/>
        <!--<Recorder:RecorderView x:Name="RecorderView" Grid.Row="1"/>-->
    </Grid>
</Window>
