<Window xmlns:Recorder="clr-namespace:RecordToMP3.Features.Recorder"
        xmlns:local="clr-namespace:RecordToMP3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MvvmLight="http://www.galasoft.ch/mvvmlight"
        x:Class="RecordToMP3.MainWindow"
        Style="{DynamicResource WindowStyle}"
        DataContext="{DynamicResource MainWindowModel}"
        Title="Record to MP3"
        Width="684"
        Height="393"
        ResizeMode="NoResize" Icon="RecordToMP3.ico" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <local:MainWindowModel x:Key="MainWindowModel" />
        </ResourceDictionary>
    </Window.Resources>
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Settings"
                      Command="{Binding ShowSettingsCommand}"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Grid>
        <ContentControl x:Name="CurrentView" Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
